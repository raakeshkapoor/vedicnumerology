<!DOCTYPE html>
<html>
<head>
  <title>Mobile Number Combinations</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 40px; }
    input { padding: 8px; width: 250px; }
    button { padding: 8px 16px; margin-left: 10px; }
    .result { margin-top: 20px; padding: 10px; border: 1px solid #ccc; border-radius: 6px; }
    .good { color: green; }
    .not-good { color: red; }
    .neutral { color: orange; }
  </style>
</head>
<body>
  <h1>Mobile Number Analyzer</h1>
  <form method="POST" action="/process">
    <input type="text" name="mobile" placeholder="Enter Mobile Number" value="<%= mobile %>" required />
    <button type="submit">Check</button>
  </form>

  <% if (results && results.length > 0) { %>
    <h2>Results</h2>
    <% results.forEach(r => { %>
      <div class="result">
        <h3><%= r.number %> - <span class="<%= r.status.toLowerCase().replace(' ', '-') %>"><%= r.status %></span></h3>
        <p><%= r.description %></p>
      </div>
    <% }) %>
  <% } else if (mobile) { %>
    <p>No matching combinations found in database.</p>
  <% } %>
</body>
</html>
